general {
        output_format = "i3bar"
        colors = true
        interval = 1
}

order += "cpu_tempereture 0"
order += "volume master"
order += "tztime local"

cpu_temperature 0 {
  format = "%degrees C"
  path = "/sys/devices/platform/coretemp.0/temp1_input"
}
tztime local {
        format = "%H:%M:%S %d/%m/%Y"
}

volume master {
    format = "♪ %volume"
    format_muted = "♪ muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}
